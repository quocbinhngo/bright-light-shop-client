<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="880.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.brightlightshop.client4.controllers.pages.AuthPage">
    <children>
        <HBox fx:id="hBox" prefHeight="720.0" prefWidth="1080.0">
            <children>
                <VBox fx:id="vBoxLeft" alignment="CENTER" prefHeight="720.0" prefWidth="540.0">
                    <children>
                        <Label text="Enter your registered email and password to sign in:">
                            <VBox.margin>
                                <Insets left="10.0" />
                            </VBox.margin></Label>
                        <TextField fx:id="signInUsernameTextField" promptText="Username" />
                        <PasswordField fx:id="signInPasswordField" promptText="Password" />
                        <Button fx:id="signInButton" mnemonicParsing="false" onAction="#signIn" text="Sign In">
                            <VBox.margin>
                                <Insets top="10.0" />
                            </VBox.margin></Button>
                  <Label fx:id="loginMessageLabel" text="Label" />
                    </children>
                    <HBox.margin>
                        <Insets />
                    </HBox.margin>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </VBox>
                <VBox fx:id="vBoxRight" alignment="CENTER" layoutX="10.0" layoutY="10.0" prefHeight="720.0" prefWidth="540.0">
                    <children>
                        <Label text="Don't have an account? Register below!">
                            <VBox.margin>
                                <Insets left="10.0" />
                            </VBox.margin>
                        </Label>
                        <TextField fx:id="registerFirstNameTextField" promptText="First Name" />
                        <TextField fx:id="registerLastNameTextField" promptText="Last Name" />
                        <TextField fx:id="registerAddressTextField" promptText="Address" />
                        <TextField fx:id="registerPhoneNumberTextField" promptText="Phone Number" />
                        <TextField fx:id="registerUsernameTextField" promptText="Username" />
                        <PasswordField fx:id="registerPasswordField" promptText="Password" />
                        <PasswordField fx:id="registerConfirmPasswordField" promptText="Confirm Password" />
                        <Button fx:id="createAccountButton" mnemonicParsing="false" onAction="#registerAccount" text="Create Account">
                            <VBox.margin>
                                <Insets top="10.0" />
                            </VBox.margin>
                        </Button>
                  <Label fx:id="registerMessageLabel" text="Label" />
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding></VBox>
            </children>
        </HBox>
    </children>
</AnchorPane>
